{
  "title": "Pod Autoscaling - Simple",
  "uid": "pod-autoscaling-simple",
  "tags": ["kubernetes", "hpa"],
  "timezone": "browser",
  "schemaVersion": 27,
  "version": 1,
  "refresh": "5s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "type": "timeseries",
      "title": "HPA Current Replicas",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "kube_horizontalpodautoscaler_status_current_replicas{horizontalpodautoscaler=\"booking-hpa\"}",
          "legendFormat": "BookingService Replicas",
          "refId": "A"
        },
        {
          "expr": "kube_horizontalpodautoscaler_status_current_replicas{horizontalpodautoscaler=\"eventservice-hpa\"}",
          "legendFormat": "EventService Replicas",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "axisCenteredZero": false,
            "axisColorMode": "text",
            "axisLabel": "",
            "axisPlacement": "auto",
            "fillOpacity": 10,
            "gradientMode": "none",
            "lineInterpolation": "linear",
            "lineWidth": 2,
            "showPoints": "auto",
            "spanNulls": false
          },
          "min": 0,
          "max": 5
        }
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "single"
        }
      }
    },
    {
      "id": 2,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      },
      "type": "stat",
      "title": "BookingService Pods",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "kube_horizontalpodautoscaler_status_current_replicas{horizontalpodautoscaler=\"booking-hpa\"}",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "value",
        "orientation": "auto",
        "textMode": "auto",
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        }
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 3
              },
              {
                "color": "red",
                "value": 5
              }
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      },
      "type": "stat",
      "title": "EventService Pods",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "kube_horizontalpodautoscaler_status_current_replicas{horizontalpodautoscaler=\"eventservice-hpa\"}",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "value",
        "orientation": "auto",
        "textMode": "auto",
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        }
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 3
              },
              {
                "color": "red",
                "value": 5
              }
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 16
      },
      "type": "timeseries",
      "title": "HPA Desired vs Current Replicas",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "kube_horizontalpodautoscaler_status_desired_replicas{horizontalpodautoscaler=\"booking-hpa\"}",
          "legendFormat": "Booking Desired",
          "refId": "A"
        },
        {
          "expr": "kube_horizontalpodautoscaler_status_current_replicas{horizontalpodautoscaler=\"booking-hpa\"}",
          "legendFormat": "Booking Current",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
